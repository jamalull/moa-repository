<body>

  <%- include('header') %>

  <%- include('sidebar') %>

  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Dashboard</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active">Dashboard</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-6">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">List of Book Pages</h5>
              <p>This is an book page list. You can see your favorite book in here.</p>
            </div>
          </div>
        </div>
      </div>
    </section>


    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              
              <span class="d-flex align-items-center">
                <h5 class="card-title me-auto">All Book Lists</h5>
              </span>

              <p>All Book available will be display in the table and only Admin can running command 
                <a href="#" target="_blank">Create, Read, Update, and Delete</a> for the data of <code>Book</code></p>

              <!-- Table with stripped rows -->
              <table class="table datatable">
                <thead>
                  <tr>
                    <th scope="col">Book ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Author</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Publisher</th>
                    <th scope="col">Published At</th>
                  </tr>
                </thead>
                <tbody>

                <% if(books.length === 0) { %>
                  <tr>
                    <td colspan="6" class="text-center">No data</td>
                  </tr>
                  <% } else {%> <% books.forEach((book, key) => { %>
                  <tr>
                    <th scope="row"><%= book.id %></th>
                    <td><%= book.name %></td>
                    <td>
                      <%= author.find(x => x.id === book.authorId).name %>
                    </td>
                    <td class="text-truncate" style="max-width: 200px;"><%= book.description %></td>
                    <td><%= book.price %></td>
                    <td><%= book.publisher %></td>
                    <td class="text-truncate" style="max-width: 170px;"><%= book.publishedAt %></td>
                  </tr>
                  
                  <% }) } %>
                </tbody>
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->

  <%- include('footer') %>

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

